@model AddUserViewModel

@{
    ViewData["Title"] = "New User";
}

<h1>Add New User</h1>
<form method="Post" asp-action="Add" class="row">
    <div class="col col-md-4">
        <div class="form-group">
            <label asp-for="FirstName" class="text-muted"></label>
            <input asp-for="FirstName" class="form-control" maxlength=100/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="text-muted"></label>
            <input asp-for="LastName" class="form-control" maxlength=100/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Username" class="text-muted"></label>
            <input asp-for="Username" class="form-control"/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

            <div class="form-group">
            <label asp-for="Email" class="text-muted"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

            <div class="form-group">
            <label asp-for="Password" class="text-muted"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="text-muted"></label>
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="cart col col-md-4">
        <div class="card-header">
             Add Roles 
        </div>
        <div class="card-body m-1 form-group">
            @for(int i=0; i <Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label" >@Model.Roles[i].RoleName</label>
                </div>
            }
            <span asp-validation-for="Roles" class="text-danger"></span>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-primary" >Cancel</a>
        </div>
    </div>
</form>
   

</div>

            
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}