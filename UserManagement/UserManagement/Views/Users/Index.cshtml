@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Users </h1>

<a asp-action="Add" class="btn btn-primary m-2">Add New</a>
<table class="table table-striped">
    <thead>
        <th>First Name </th>
        <th>Last Name </th>
        <th>User Name </th>
        <th>Email </th>
        <th>Roles </th>
        <th>Manage </th>
    </thead>

    <tbody>
       @foreach(var user in Model)
       {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ",user.Roles)</td>
                <td> 
                    <a class="btn btn-primary" asp-action ="ManageRoles" asp-route-userId =@user.Id>Manage Roles</a>
                    <a class="btn btn-primary" asp-action ="Modify" asp-route-userId =@user.Id>Modify User</a> 
                </td>
            </tr>
       }
    </tbody>

</table>