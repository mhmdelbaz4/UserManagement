@model UserRolesViewModel

@{
   ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles</h1>
<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h1>@Model.UserName</h1>
             Add/Remove Roles 
        </div>
        <input type="hidden" asp-for="UserId"/>
        
        <div class="card-body m-1">
            @for(int i=0; i <Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label" >@Model.Roles[i].RoleName</label>
                </div>
            }
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-primary" >Cancel</a>
        </div>
    </div>
</form>